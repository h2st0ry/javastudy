package static2.ex;

public class Car {
    private String name;
    private static int carCount;

    public Car(String name) {
        this.name = name;
        System.out.println("차랑 구입, 이름: " + name);
        carCount++;
    }

    public static void showTotalCar() {
        System.out.println("구매한 차랑 수: " + carCount);
    }
}
